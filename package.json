{
  "name": "iobroker.innoxel",
  "version": "1.0.0",
  "description": "Adapter for Innoxel Master 3",
  "author": {
    "name": "matthsc",
    "email": "matthsc@gmx.net"
  },
  "homepage": "https://github.com/matthsc/ioBroker.innoxel",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "innoxel"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/matthsc/ioBroker.innoxel"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2",
    "innoxel-soap": "^1.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@biomejs/biome": "^1.9.4",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.17.6",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.0",
    "mocha": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "type": "module",
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "translate": "translate-adapter",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "run-s test:ts test:package",
    "test-all": "run-s test:*",
    "check": "tsc --noEmit",
    "check-all": "run-s check lint test",
    "coverage": "nyc npm run test:ts",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write .",
    "release": "release-script -p iobroker license"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/matthsc/ioBroker.innoxel/issues"
  },
  "readmeFilename": "README.md"
}
